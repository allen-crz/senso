# Senso API - Environment Variables Template
# Copy this file to .env and fill in your values

# ================================
# REQUIRED: Supabase Configuration
# ================================
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_JWT_SECRET=your_jwt_secret_here

# ================================
# Optional: Application Settings
# ================================

# CORS - Allow frontend domains
# For development: http://localhost:5173,http://localhost:3000
# For production: https://your-vercel-app.vercel.app
ALLOWED_HOSTS=*

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ML Model Settings (defaults are fine)
# MODEL_VERSION=v1.0.0
# CNN_MODEL_PATH=./models/cnn_meter_reader.pkl
# YOLO_MODEL_PATH=./models/electric_meter.pt
# WATER_YOLO_MODEL_PATH=./models/water_meter.pt

# File Upload Settings (defaults are fine)
# MAX_FILE_SIZE=10485760
# UPLOAD_DIR=./uploads

# External YOLO API (leave empty to use local models)
# YOLO_API_URL=
# YOLO_API_TIMEOUT=120

# Notification Settings (optional)
# ENABLE_NOTIFICATIONS=true
# EMAIL_ENABLED=false

# ================================
# Hugging Face Spaces Deployment
# ================================
# When deploying to HF Spaces, add these as "Repository secrets" in Space settings
# DO NOT commit your actual .env file to git!
